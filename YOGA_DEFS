THIS_IS_FBOBJC = False

CXX_LIBRARY_WHITELIST = [
  '//lib/yoga:yoga',
  '//lib/yoga/lib/fb:fbjni',
  '//lib/yoga/java:jni',
]

BASE_COMPILER_FLAGS = [
  '-fno-omit-frame-pointer',
  '-fexceptions',
  '-Wall',
  '-Werror',
  '-O3',
]

def yoga_dep(dep):
  if dep.startswith(":") or dep.startswith("/"):
    return '//lib/yoga' + dep
  else:
    return '//lib/yoga/' + dep

with allow_unsafe_import():
  import os.path
def isdir(filename):
  return os.path.isdir(filename)
