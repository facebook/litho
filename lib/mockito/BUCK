    name = "mockito-core-prebuilt",
    binary_jar = ":mockito-core.jar",
)

fb_native.remote_file(
    name = "mockito-core.jar",
    sha1 = "c3264abeea62c4d2f367e21484fbb40c7e256393",
    url = "mvn:org.mockito:mockito-core:jar:1.9.5",
)
