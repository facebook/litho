load("//tools/build_defs/oss:fb_native_wrapper.bzl", "fb_native")
load("//tools/build_defs/oss:litho_defs.bzl", "fb_java_library", "make_dep_path")

fb_java_library(
    name = "mockito",
    visibility = ["PUBLIC"],
    exported_deps = [
        ":mockito-core-prebuilt",
        make_dep_path("lib/objenesis:objenesis"),
    ],
)

