    name = "soloader",
    autoglob = False,
    language = "JAVA",
    visibility = LITHO_VISIBILITY,
    exported_deps = [
        ":annotation-prebuilt",
        ":nativeloader-prebuilt",
        ":soloader-prebuilt",
    ],
)

