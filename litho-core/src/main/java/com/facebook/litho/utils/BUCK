load("//tools/build_defs/oss:litho_defs.bzl", "LITHO_ANDROIDSUPPORT_RECYCLERVIEW_TARGET", "LITHO_ANDROIDSUPPORT_TARGET", "LITHO_JAVA_TARGET", "LITHO_JSR_TARGET", "litho_android_library", "make_dep_path")

litho_android_library(
    name = "utils",
    srcs = glob(["*.java"]),
    is_androidx = True,
    tests = [
        make_dep_path("litho-it/src/test/java/com/facebook/litho/utils:utils"),
    ],
    visibility = [
        "PUBLIC",
    ],
    deps = [
        LITHO_JAVA_TARGET,
        LITHO_ANDROIDSUPPORT_TARGET,
        LITHO_ANDROIDSUPPORT_RECYCLERVIEW_TARGET,
        LITHO_JSR_TARGET,
    ],
)
