    name = "debug",
    srcs = glob(["*.java"]),
    is_androidx = True,
    required_for_source_only_abi = True,
    visibility = [
        "PUBLIC",
    ],
    deps = [
        LITHO_SECTIONS_TARGET,
        LITHO_WIDGET_TARGET,
        LITHO_JAVA_TARGET,
        LITHO_ANDROIDSUPPORT_TARGET,
    ],
)
