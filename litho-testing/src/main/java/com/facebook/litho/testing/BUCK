load("//tools/build_defs/oss:litho_defs.bzl", "LITHO_ANDROIDSUPPORT_RECYCLERVIEW_TARGET", "LITHO_ANDROIDSUPPORT_TARGET", "LITHO_ANDROIDSUPPORT_TESTING_TARGET", "LITHO_ASSERTJ_TARGET", "LITHO_FRESCO_TARGET", "LITHO_JAVA_TARGET", "LITHO_JSR_TARGET", "LITHO_PROCESSOR_TARGET", "LITHO_RES_TARGET", "LITHO_ROBOLECTRIC_TARGET", "LITHO_TESTING_ASSERTJ_TARGET", "LITHO_TESTING_HELPER_TARGET", "LITHO_TESTING_SUBCOMPONENTS_TARGET", "LITHO_TESTING_WHITEBOX_TARGET", "LITHO_WIDGET_TARGET", "LITHO_YOGA_TARGET", "litho_android_library", "make_dep_path")

litho_android_library(
    name = "whitebox",
    srcs = glob(["Whitebox.java"]),
    visibility = [
        "PUBLIC",
    ],
)

litho_android_library(
    name = "testing",
    srcs = glob(
        ["*.java"],
        exclude = ["Whitebox.java"],
    ),
    is_androidx = True,
    plugins = [
        LITHO_PROCESSOR_TARGET,
    ],
    provided_deps = [
        LITHO_ROBOLECTRIC_TARGET,
    ],
    tests = [
        make_dep_path("litho-it/src/test/java/com/facebook/litho/testing:testing"),
        make_dep_path("litho-it/src/test/java/com/facebook/litho/testing/viewtree:viewtree"),
        make_dep_path("litho-it-powermock/src/test/java/com/facebook/litho/testing/viewtree:viewtree"),
    ],
    visibility = [
        "PUBLIC",
    ],
    deps = [
        LITHO_TESTING_ASSERTJ_TARGET,
        LITHO_ANDROIDSUPPORT_TARGET,
        LITHO_JAVA_TARGET,
        LITHO_RES_TARGET,
        LITHO_JSR_TARGET,
        LITHO_FRESCO_TARGET,
        LITHO_TESTING_WHITEBOX_TARGET,
        LITHO_YOGA_TARGET,
        LITHO_WIDGET_TARGET,
        LITHO_ASSERTJ_TARGET,
        LITHO_ANDROIDSUPPORT_RECYCLERVIEW_TARGET,
        LITHO_ANDROIDSUPPORT_TESTING_TARGET,
    ],
    exported_deps = [
        LITHO_TESTING_SUBCOMPONENTS_TARGET,
        LITHO_TESTING_HELPER_TARGET,
        make_dep_path("litho-testing/src/main/java/com/facebook/litho/testing/state:state"),
    ],
)
