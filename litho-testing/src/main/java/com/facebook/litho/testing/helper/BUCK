load("//tools/build_defs/oss:litho_defs.bzl", "LITHO_ANDROIDSUPPORT_TARGET", "LITHO_JAVA_TARGET", "LITHO_ROBOLECTRIC_V3_TARGET", "LITHO_ROBOLECTRIC_V4_TARGET", "LITHO_TESTING_SUBCOMPONENTS_TARGET", "LITHO_TESTING_WHITEBOX_TARGET", "litho_android_library")

COMMON_DEPS = [
    LITHO_JAVA_TARGET,
    LITHO_TESTING_SUBCOMPONENTS_TARGET,
    LITHO_TESTING_WHITEBOX_TARGET,
    LITHO_ANDROIDSUPPORT_TARGET,
]

litho_android_library(
    name = "helper",
    srcs = glob(["*.java"]),
    provided_deps = [
        LITHO_ROBOLECTRIC_V3_TARGET,
    ],
    visibility = [
        "PUBLIC",
    ],
    deps = COMMON_DEPS,
)

litho_android_library(
    name = "helper-v4",
    srcs = glob(["*.java"]),
    provided_deps = [
        LITHO_ROBOLECTRIC_V4_TARGET,
    ],
    visibility = [
        "PUBLIC",
    ],
    deps = COMMON_DEPS,
)
