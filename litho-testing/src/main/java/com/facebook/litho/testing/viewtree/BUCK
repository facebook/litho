load("//tools/build_defs/oss:litho_defs.bzl", "LITHO_ASSERTJ_TARGET", "LITHO_DIFFUTILS_TARGET", "LITHO_GUAVA_TARGET", "LITHO_JAVA_TARGET", "LITHO_JSR_TARGET", "LITHO_JUNIT_TARGET", "LITHO_ROBOLECTRIC_V3_TARGET", "LITHO_ROBOLECTRIC_V4_TARGET", "litho_android_library", "make_dep_path")

COMMON_DEPS = [
    LITHO_DIFFUTILS_TARGET,
    LITHO_GUAVA_TARGET,
    LITHO_JAVA_TARGET,
    LITHO_JSR_TARGET,
    LITHO_JUNIT_TARGET,
]

litho_android_library(
    name = "viewtree",
    srcs = glob(["*.java"]),
    provided_deps = [
        LITHO_ROBOLECTRIC_V3_TARGET,
    ],
    tests = [
        make_dep_path("litho-it/src/test/java/com/facebook/litho/testing/viewtree:viewtree"),
    ],
    visibility = [
        "PUBLIC",
    ],
    deps = COMMON_DEPS,
    exported_deps = [
        LITHO_ASSERTJ_TARGET,
    ],
)

litho_android_library(
    name = "viewtree-v4",
    srcs = glob(["*.java"]),
    provided_deps = [
        LITHO_ROBOLECTRIC_V4_TARGET,
    ],
    tests = [
        make_dep_path("litho-it/src/test/java/com/facebook/litho/testing/viewtree:viewtree"),
    ],
    visibility = [
        "PUBLIC",
    ],
    deps = COMMON_DEPS,
    exported_deps = [
        LITHO_ASSERTJ_TARGET,
    ],
)
