<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.facebook.samples.litho">

  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <uses-sdk android:targetSdkVersion="28"/>

  <application
      android:name=".LithoSampleApplication"
      android:label="@string/app_name"
      android:icon="@drawable/ic_launcher"
      android:allowBackup="false"
      android:debuggable="true"
      android:supportsRtl="true"
      android:theme="@style/NoTitleBarWhiteBG"
      tools:ignore="HardcodedDebugMode">
    <activity android:name=".SampleRootActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".DemoListActivity" />
    <activity android:name=".ComponentDemoActivity" />
    <activity android:name=".java.lithography.LithographyActivity" />
    <activity android:name=".java.errors.ErrorHandlingActivity" />
    <activity android:name=".java.hscroll.HorizontalScrollWithSnapActivity" />
    <activity android:name=".java.animations.expandableelement.ExpandableElementActivity" />
    <activity android:name=".java.animations.commondynamicprops.CommonDynamicPropsAnimationActivity" />
    <activity android:name=".java.animations.animationcookbook.AnimationCookBookActivity" />
    <activity android:name=".java.animations.transitions.TransitionsActivity" />
    <activity android:name=".java.animations.animationcallbacks.AnimationCallbacksActivity" />
    <activity android:name=".java.animations.sharedelements.DetailActivity" />
    <activity android:name=".java.animations.sharedelements.SharedElementsFragmentActivity" />
    <activity android:name=".java.dynamicprops.DynamicPropsActivity"/>
    <activity android:name=".java.fastscroll.FastScrollHandleActivity"/>
    <activity android:name=".java.changesetdebug.StateResettingActivity"/>
    <activity android:name=".java.changesetdebug.ItemsRerenderingActivity"/>
    <activity android:name=".java.changesetdebug.PropUpdatingActivity"/>
    <activity android:name=".java.changesetdebug.ScrollingToBottomActivity" />
    <activity android:name=".java.incrementalmount.IncrementalMountWithCustomViewContainerActivity" />
    <activity android:name=".java.stateupdates.StateUpdateFromOutsideTreeActivity" />
    <activity android:name=".java.triggers.CustomEventTriggerExampleActivity" />
    <activity android:name=".java.triggers.TooltipTriggerExampleActivity" />
    <activity android:name=".java.lifecycle.LifecycleDelegateActivity" />
    <activity android:name=".java.lifecycle.ViewPagerLifecycleActivity" />
    <activity android:name=".java.lifecycle.LifecycleFragmentActivity" />
    <activity android:name=".java.animations.sharedelements.SharedDetailActivityElementsFragmentActivity" />
    <activity android:name=".java.editor.SimpleEditorExampleActivity" />
    <activity android:name=".java.onboarding.HelloWorldActivity" />
    <activity android:name=".java.onboarding.FirstComponentSpecActivity" />

    <activity android:name=".kotlin.lithography.LithographyActivity" />
    <activity android:name=".kotlin.errors.ErrorHandlingActivity" />
    <activity android:name=".kotlin.animations.animatedcounter.AnimatedCounterActivity" />
    <activity android:name=".kotlin.logging.LoggingActivity" />

  </application>


</manifest>
